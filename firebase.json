{
  "functions": {
    "ignore": [
      ".git",
      ".runtimeconfig.json",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "node_modules",
      "e2e",
      "readmes",
      "jest.config.js",
      "babel-config.js"
    ],
    "source": "functions"
  },
  "hosting": [
    {
      "target": "coverage_report",
      "public": "hosting/coverage/lcov-report"
    },
    {
      "target": "e2e_report",
      "public": "hosting/e2e-report"
    },
    {
      "target": "documentation",
      "public": "hosting/swagger"
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
